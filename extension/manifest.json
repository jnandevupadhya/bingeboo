{
  "manifest_version": 3,
  "name": "BingeBoo",
  "version": "1.0",

  "permissions": ["scripting", "tabs", "debugger", "storage", "alarms"],

  "host_permissions": [
    "wss://*.onrender.com/*",
    "ws://127.0.0.1/*",
    "https://www.netflix.com/*",
    "https://*.onrender.com/"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "js": ["content.js"]
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png"
  }
}
